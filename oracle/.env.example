# Ethereum / Provider
PROVIDER_URL=https://rpc-hoodi.example
ORACLE_PRIVATE_KEY=0x...YOUR_ORACLE_WALLET_PRIVATE_KEY...
VERIFIER_CONTRACT_ADDRESS=0xYourVerifierAddress
VERIFIER_ABI_PATH=./verifier_abi.json

# Encryption master key - 32 bytes hex (keep this secret!)
MASTER_ENC_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# API authentication between your backend and oracle
API_HMAC_KEY=change_this_to_a_strong_hex_key

# Server
PORT=4430
NODE_ENV=production

# Rate limits
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=120

# Optional: gas settings
GAS_PRICE_GWEI=0
GAS_LIMIT=300000
